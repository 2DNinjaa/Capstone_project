extends layoutSeeker

block content
	h2 Search for Jobs
	form(action='/jobFilter', method='post')
		span Select Search Field:
			select(name='colTitle')
				option(value='location') Location
				option(value='skills') Skills
		
		input.frogGreenBorder(name='jobFullSearch', type='text', placeholder='Search...')
		button.btn.btn-primary.frogGreen(name='ClearSearch', type='reset', value='RESETSEARCHCODE') Clear
		button.btn.btn-primary.frogGreen(name='ClearSearch', type='submit', value='Submit') submit

		br
		br
		span Additional Parameters
		br
		
		span Select Search Field:
			select(name='colTitle2')
				option(value='None') None
				option(value='location') Location
				option(value='skills') Skills
		
		input.frogGreenBorder(name='jobFullSearch2', type='text', placeholder='Search...')

		br
		span Select Search Field:
			select(name='colTitle3')
				option(value='None') None
				option(value='location') Location
				option(value='skills') Skills
		
		input.frogGreenBorder(name='jobFullSearch3', type='text', placeholder='Search...')


		br
		//span Active Filters: #{FiltersDesc}
	hr
	br

	.container
		.row
			.col
				//h1.display-4.mb-3 Infinite load
				#scroller.mb-3
					// template for each job post
					template#post_template
						.card.mb-3.animated.fadeIn.shadow-sm
							a#postLink(href='/')
								.card-body.jobPost
									h4#title.card-title
									h4#company.text-muted
									br
									span#location.text-muted
									span#pay.text-muted
							hr
							br
				// triggers the refresh
				#sentinel.d-flex.justify-content-center.mb-3
					.spinner-border(role='status')
					
	// associated js for the infinite scrolling
	script(src='/static/scripts/script.js')