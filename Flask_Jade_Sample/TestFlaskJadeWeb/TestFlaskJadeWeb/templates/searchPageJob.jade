extends layoutSeeker

block content
	h2 Search for Jobs
	form(action='/jobFilter', method='post')
		input.frogGreenBorder(name='jobFullSearch', placeholder='Search...')
		button.btn.btn-primary.frogGreen(name='ClearSearch', type='reset', value='RESETSEARCHCODE') Clear
		br
		span Active Filters: #{FiltersDesc}
	hr
	br

	.container
		.row
			.col
				//h1.display-4.mb-3 Infinite load
				#scroller.mb-3
					// template for each job post
					template#post_template
						.card.mb-3.animated.fadeIn.shadow-sm
							a#postLink(href='/')
								.card-body.jobPost
									h4#title.card-title
									h4#company.text-muted
									br
									span#location.text-muted
									span#pay.text-muted
							hr
							br
				// triggers the refresh
				#sentinel.d-flex.justify-content-center.mb-3
					.spinner-border(role='status')
					
	// associated js for the infinite scrolling
	script(src='/static/scripts/script.js')

	div.sidenav.frogNav
		label Filters
		form.SearchFilters(action='/jobFilter', method='post')
			input.frogGreenDarkBorder(style='margin-bottom:8px', type='text', placeholder='Location', name='Location')
			// input.frogGreenDarkBorder(style='margin-bottom:8px', type='number', placeholder='Distance', name='Distance')
			input.frogGreenDarkBorder(style='margin-bottom:8px', type='text', placeholder='Pay', name='Pay')
			
			div(style='display:flex; margin-bottom:8px')
				span Full Time
				label.checkbox-label
					input(type="checkbox", value='Full', name='FullTime')
					span.checkbox-custom.rectangular.frogGreenDarkBorder

			div(style='display:flex; margin-bottom:8px')
				span Part Time
				label.checkbox-label
					input(type="checkbox", value='Part', name='PartTime')
					span.checkbox-custom.rectangular.frogGreenDarkBorder

			button.btn.btn-primary.center.frogGreen(
				style='margin:0% 1%; border: 2px solid #6D9984!important;', 
				type='submit', 
				name='UpdateFilters', 
				value='UF') Update